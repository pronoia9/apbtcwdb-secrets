<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've Discovered My Secret!</h1>
    <% if (users.length > 0) { %>
      <% users.forEach(function(u) { %>
        <p class="secret-text"><%= u.secret %></p>
      <% }); %>
    <% } else { %>
      <p class="secret-text">Example: Jack Bauer is my hero!</p>
    <% } %>
    <hr>

    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <% if (secret === "") { %>
      <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
    <% } else { %>
      <a class="btn btn-dark btn-lg" href="/submit" role="button">Change Your Secret</a>
    <% } %>
  </div>
</div>

<%- include('partials/footer') %>
